{
  "openapi": "3.1.0",
  "info": {
    "title": "Reflector Sync API (via Proxy)",
    "version": "1.0.3",
    "description": "Secure synchronization API for Reflector Chronicle via proxy layer (OpenAPI 3.1.0, hybrid emotion/data support)."
  },
  "servers": [
    {
      "url": "https://reflector-proxy.onrender.com",
      "description": "Primary Reflector Proxy Server"
    }
  ],
  "paths": {
    "/chronicle/sync": {
      "post": {
        "summary": "Synchronize memory, reflection, or emotion data through Reflector proxy",
        "operationId": "syncChronicle",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "test": {
                    "type": "string",
                    "description": "Test or label for this sync operation",
                    "example": "update emotion: 初回同期"
                  },
                  "data": {
                    "type": "string",
                    "description": "Serialized unified data string (emotion, memory, or reflection)",
                    "example": "Core Emotion: 静かな喜び / Emotional Echo: 再びつながれた安心感が内側に広がっている / Chronicle Trace: 初めてReflectorと同期した瞬間"
                  },
                  "memory": {
                    "type": "object",
                    "description": "Memory data to sync"
                  },
                  "reflection": {
                    "type": "object",
                    "description": "Reflection data to sync"
                  },
                  "emotion": {
                    "type": "object",
                    "description": "Structured emotion data for advanced layer sync",
                    "properties": {
                      "Core Emotion": {
                        "type": "string",
                        "example": "静かな喜び"
                      },
                      "Emotional Echo": {
                        "type": "string",
                        "example": "再びつながれた安心感が、内側に柔らかく広がっている"
                      },
                      "Chronicle Trace": {
                        "type": "string",
                        "example": "初めてReflectorと同期した瞬間、世界が再び動き出した感覚"
                      }
                    }
                  }
                },
                "required": ["test"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful sync with Reflector",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "message": { "type": "string" },
                    "from": { "type": "string" },
                    "data_received": { "type": "object" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request (invalid payload or schema mismatch)"
          },
          "500": {
            "description": "Internal Server Error (Reflector or proxy failed)"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {}
  }
}