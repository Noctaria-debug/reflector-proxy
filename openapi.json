{
  "openapi": "3.0.1",
  "info": {
    "title": "Reflector Sync API (via Proxy)",
    "version": "1.0.0",
    "description": "Secure synchronization API for Reflector Chronicle via proxy layer."
  },
  "servers": [
    {
      "url": "https://reflector-proxy.onrender.com",
      "description": "Primary Reflector Proxy server"
    }
  ],
  "paths": {
    "/chronicle/sync": {
      "post": {
        "summary": "Synchronize memory or reflection data",
        "operationId": "syncChronicle",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "test": {
                    "type": "string",
                    "example": "Hello Reflector!"
                  },
                  "memory": {
                    "type": "object",
                    "description": "Memory data to sync"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Synchronization success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "message": { "type": "string" },
                    "response": { "type": "object" }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "service_http": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "security": [
    {
      "service_http": []
    }
  ]
}